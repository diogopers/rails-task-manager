<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %></p>
  <p><%= task.completed ? "COMPLETED" : "TASK NOT COMPLETED" %></p>
  <%= link_to 'See details', task %><br>
  <%= link_to 'Edit task', edit_task_path(task) %><br>
  <%= link_to 'Delete task', task_path(task), method: :delete, data: { confirm: "Are you sure" } %>
<% end %>
